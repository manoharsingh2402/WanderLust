<% layout("/layouts/boilerplate") %> 
<body> 
    <div class="row mt-3"> 
        <div class="col-6 offset-3">
            <h3 class="col-6 offset-3">Sign Up on WanderLust</h3>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username"  id="title" class="form-control" required> 
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">username should be valid</div>
                </div> 
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email"  id="email" class="form-control" required> 
                    
                    <div class="invalid-feedback">email should be valid</div>
                </div> 
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password"  id="password" class="form-control" required> 
                    <div class="invalid-feedback">password should be valid</div>
                </div> 
                <button type="submit" class="btn btn-success">signup</button>
            </form>
        </div>
    </div>
</body>